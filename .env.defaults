# Safe defaults for local dev (no secrets)
# These are read at build-time by Vite only if exported into the shell or via env inject tooling.
# Copy to .env (gitignored) if you want local overrides.

# Backend API base path (use /api if using Vite proxy)
VITE_API_BASE_URL=/api

# Display-only provider hint for the UI
VITE_STORAGE_PROVIDER=local

# Optional feature flags
VITE_UPLOAD_MAX_MB=50
VITE_FEATURE_UPLOAD=true

# Dev server backend proxy target for /api (used only by Vite dev server)
# Example: http://localhost:3000
DEV_PROXY_TARGET=http://localhost:3000
